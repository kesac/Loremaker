<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Archigen" Version="1.1.0" />
    <PackageReference Include="Delaunator" Version="1.0.8" />
    <PackageReference Include="Markov" Version="2.0.0">
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <PackageReference Include="Syllabore" Version="2.0.0-alpha6" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy /Y &quot;$(TargetDir)..\*.nupkg&quot; &quot;G:\Transient\Packages\*.nupkg&quot;" />
  </Target>

</Project>
